#!/bin/sh
set -e

service_down () {
	name="$1"
	if systemctl is-enabled "$name" >/dev/null; then
		echo "Disabling $name..."
		systemctl disable --now "$name" || true
	fi
}

if [ "$1" = "remove" ]; then
	service_down solarnode-bt-setup-peripheral-agent
	service_down solarnode-bt-setup-peripheral-gatt-server
	service_down solarnode-bt-piscan.service
	service_down solarnode-bt-piscan.path
fi
