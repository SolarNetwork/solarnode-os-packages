#!/bin/sh
set -e

DKMS_NAME=rtc-pcf8563w
DKMS_VERSION=0.1

case "$1" in
	remove|upgrade|deconfigure)
		if [  "$(dkms status -m $DKMS_NAME -v $DKMS_VERSION)" ]; then
			dkms remove -m $DKMS_NAME -v $DKMS_VERSION --all || true
			rm -rf /var/lib/dkms/$DKMS_NAME/$DKMS_VERSION 2>/dev/null || true
		fi
	;;
esac
