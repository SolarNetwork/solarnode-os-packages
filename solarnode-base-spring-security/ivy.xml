<?xml version="1.0" encoding="UTF-8"?>
<!--
	SolarNode base platform support for Spring Framework Security.
-->
<ivy-module version="2.0">
	<info organisation="SolarNetwork" module="SolarNode-Spring-Security"/>
	<configurations>
		<conf name="runtime" visibility="public" description="The Runtime"/>
	</configurations>
	<dependencies defaultconfmapping="runtime->default(runtime)">

		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-acl" rev="6.4.5_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-config" rev="6.4.5_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-core" rev="6.4.5_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-crypto" rev="6.4.5_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-data" rev="6.4.5_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-messaging" rev="6.4.5_1"/>

		<!-- See https://github.com/apache/servicemix-bundles/pull/293 -->
		<dependency org="net.solarnetwork.external" name="org.apache.servicemix.bundles.spring-security-web" rev="6.4.5_SN01"/>

		<!-- Global excludes provided by the base system -->
		<exclude module="aopalliance"/>
		<exclude module="commons-logging"/>
		<exclude org="io.micrometer"/>
		<exclude org="jakarta.activation"/>
		<exclude org="jakarta.xml.bind"/>
		<exclude org="org.slf4j"/>
		<exclude org="org.springframework"/>
		<exclude org="org.springframework.data"/>
		<exclude org="org.springframework.security"/>

	</dependencies>
</ivy-module>
