<?xml version="1.0" encoding="UTF-8"?>
<!--
	SolarNode base platform support for Spring Framework Security.
-->
<ivy-module version="2.0">
	<info organisation="SolarNetwork" module="SolarNode-Spring-Security"/>
	<configurations>
		<conf name="runtime" visibility="public" description="The Runtime"/>
	</configurations>
	<dependencies defaultconfmapping="runtime->default(runtime)">

		<!-- Spring Security -->
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-acl" rev="5.8.1_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-config" rev="5.8.1_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-core" rev="5.8.1_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-messaging" rev="5.8.1_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-taglibs" rev="5.8.1_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-security-web" rev="5.8.1_1"/>

		<!-- Global excludes provided by the base system -->
		<exclude module="aopalliance"/>
		<exclude module="commons-logging"/>
		<exclude org="org.springframework"/>
		<exclude org="org.springframework.security"/>

	</dependencies>
</ivy-module>
