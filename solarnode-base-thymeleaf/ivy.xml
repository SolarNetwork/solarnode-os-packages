<?xml version="1.0" encoding="UTF-8"?>
<!--
	SolarNode app deployment configuration support.
-->
<ivy-module version="2.0">
	<info organisation="SolarNetwork" module="SolarNode-Thymeleaf"/>
	<configurations>
		<conf name="runtime" visibility="public" description="The Runtime"/>
	</configurations>
	<dependencies defaultconfmapping="runtime->default(runtime)">

		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.thymeleaf" rev="3.1.2.RELEASE_1" />
		<dependency org="net.solarnetwork.external" name="net.solarnetwork.external.thymeleaf-spring6" rev="3.1.2.RELEASE" />
		<dependency org="net.solarnetwork.external" name="net.solarnetwork.external.thymeleaf-extras-springsecurity6" rev="3.1.2.RELEASE" />

		<exclude org="io.micrometer"/>
		<exclude org="jakarta.servlet"/>
		<exclude org="ognl"/>
		<exclude org="org.attoparser"/>
		<exclude org="org.javassist"/>
		<exclude org="org.slf4j"/>
		<exclude org="org.springframework"/>
		<exclude org="org.springframework.data"/>
		<exclude org="org.springframework.security"/>
		<exclude org="org.thymeleaf"/>
		<exclude org="org.unbescape"/>

	</dependencies>
</ivy-module>
