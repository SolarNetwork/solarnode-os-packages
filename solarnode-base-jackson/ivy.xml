<?xml version="1.0" encoding="UTF-8"?>
<!--
	SolarNode app deployment configuration for Jackson JSON support.
-->
<ivy-module version="2.0">
	<info organisation="SolarNetwork" module="SolarNode-Jackson"/>
	<configurations>
		<conf name="runtime" visibility="public" description="The Runtime"/>
	</configurations>
	<dependencies defaultconfmapping="runtime->default(runtime)">

		<!-- Jackson JSON -->
		<dependency org="com.fasterxml.jackson.core" name="jackson-annotations" rev="2.19.0"/>
		<dependency org="com.fasterxml.jackson.core" name="jackson-core" rev="2.19.0"/>
		<dependency org="com.fasterxml.jackson.core" name="jackson-databind" rev="2.19.0"/>
		<dependency org="com.fasterxml.jackson.dataformat" name="jackson-dataformat-cbor" rev="2.19.0"/>
		<dependency org="com.fasterxml.jackson.datatype" name="jackson-datatype-jsr310" rev="2.19.0"/>

	</dependencies>
</ivy-module>
