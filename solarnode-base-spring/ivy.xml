<?xml version="1.0" encoding="UTF-8"?>
<!--
	SolarNode base platform support for Spring Framework.
-->
<ivy-module version="2.0">
	<info organisation="SolarNetwork" module="SolarNode-Spring"/>
	<configurations>
		<conf name="runtime" visibility="public" description="The Runtime"/>
	</configurations>
	<dependencies defaultconfmapping="runtime->default(runtime)">

		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-aop" rev="6.2.6_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-beans" rev="6.2.6_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-context" rev="6.2.6_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-context-support" rev="6.2.6_1"/>

		<!-- See https://github.com/apache/servicemix-bundles/pull/295 -->
		<dependency org="net.solarnetwork.external" name="org.apache.servicemix.bundles.spring-core" rev="6.2.6_SN01"/>

		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-data-commons" rev="3.4.5_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-expression" rev="6.2.6_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-jdbc" rev="6.2.6_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-messaging" rev="6.2.6_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-tx" rev="6.2.6_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-web" rev="6.2.6_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-webmvc" rev="6.2.6_1"/>
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-websocket" rev="6.2.6_1"/>

		<dependency org="net.solarnetwork.external" name="net.solarnetwork.external.spring-web-multipart-tomcat" rev="6.0.0.SN01"/>

		<!-- Global excludes provided by the base system -->
		<exclude module="aopalliance"/>
		<exclude module="commons-codec"/>
		<exclude module="commons-logging"/>
		<exclude org="io.micrometer"/>
		<exclude org="jakarta.servlet"/>
		<exclude org="org.apache.tomcat"/>
		<exclude org="org.slf4j"/>
		<exclude org="org.springframework"/>
		<exclude org="org.springframework.data"/>
		<exclude org="org.unbescape"/>

	</dependencies>
</ivy-module>
